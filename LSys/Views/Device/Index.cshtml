@{
    int rowNumber = 0;
}

<div class="container-fluid mt-4 px-4">
    <a type="button" asp-controller="Device" asp-action="Add" class="btn btn-primary mb-3 d-grid gap-2">Add new device</a>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>

            Devices

        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Group</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Location</th>
                        <th scope="col">Details</th>
                        <th scope="col">Control</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Group</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Location</th>
                        <th scope="col">Details</th>
                        <th scope="col">Control</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@(rowNumber += 1)</th>

                            <td>@item.Group</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Location</td>
                            <td class="text-right">
                                @*                               <a type="button" asp-controller="MQTTCredentials" asp-action="Get" asp-route-id="@item.Id" class="btn btn-primary">MQTT</a>
                            <a type="button" asp-controller="WiFiCredentials" asp-action="Get" asp-route-id="@item.Id" class="btn btn-primary">WiFi</a>*@
                                <a type="button" asp-controller="Device" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                                @*<a type="button" asp-controller="Device" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Update</a>*@
                                @*<button type="button" class="btn btn-danger" onclick="outsideClick('Device-@item.Id'), document.getElementById('Device-@item.Id').style.display='block'">Delete</button>*@
                            <td>
                                    @foreach (var channel in item.Relays)
                                    {
                                    <input class="form-check-input" type="checkbox" value="@channel.FirstChannelState" asp-for="@channel.FirstChannelState" asp-action=""> </input>
                                    <label class="form-check-label" asp-for="@channel.FirstChannelState"> First Channel</label>
                                    <input class="form-check-input" type="checkbox" value="@@channel.SecondChannelState" asp-for="@channel.SecondChannelState"> </input>
                                    <label class="form-check-label" asp-for="@channel.SecondChannelState"> Second Channel</label>
                                    }
                            </td>

                        </tr>

                        @* <div id="Device-@item.Id" class="modal" tabindex="-1" role="dialog">
                    <div class="modal-dialog" role="document">
                    <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title">Delete Device</h5>
                    </div>
                    <form asp-controller="Device" asp-action="Delete" asp-route-id="@item.Id" method="post">
                    <div class="modal-body">
                    <p>Are you sure you want to delete this device?</p>
                    </div>
                    <div class="modal-footer">
                    <button type="button" onclick="document.getElementById('Device-@item.Id').style.display='none'" class="btn btn-secondary">Cancel</button>
                    <button type="submit" onclick="document.getElementById('Device-@item.Id').style.display='none'" class="btn btn-danger">Delete</button>

                    </div>
                    </form>
                    </div>

                    </div>
                    </div>*@

                    }
                    @*Przygotować paginacje dla listy*@
                </tbody>
            </table>

        </div>
    </div>
</div>

<script>
    function outsideClick(id) {
        var modal = document.getElementById(id);
        console.log(id)

        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    };


</script>
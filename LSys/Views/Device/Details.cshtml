@using LSys.View_Models
@model GetDeviceMQTTWiFiVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container-fluid mt-4 px-4">
    <div class="card mb-3">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                    @Model.deviceVM.Name
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">Id</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                    @Model.deviceVM.Id
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0 ">Group</h6>
                </div>
                <div class="col-sm-9 text-secondary fw-bold">
                    @Model.deviceVM.Group
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">Mobile</h6>
                </div>
                <div class="col-sm-9 text-secondary ">
                    @Model.deviceVM.Location
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">Description</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                    @Model.deviceVM.Description
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-12">
                    <a type="button" asp-controller="Device" asp-action="Update" asp-route-id="@Model.deviceVM.Id" class="btn btn-success">Update</a>
                    <a type="button" asp-controller="MQTT" asp-action="Update" asp-route-id="@Model.deviceVM.Id" class="btn btn-primary">MQTT Credentials</a>
                    <a type="button" asp-controller="MQTT" asp-action="Add" asp-route-id="@Model.deviceVM.Id" class="btn btn-primary">Add MQTT server</a>
                    <a type="button" asp-controller="WiFi" asp-action="Update" asp-route-id="@Model.deviceVM.Id" class="btn btn-primary">WiFi Credentials</a>

                    <a type="button" class="btn btn-danger" onclick="document.getElementById('Device-@Model.deviceVM.Id').style.display='block' ">Delete Device</a>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="Device-@Model.deviceVM.Id" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Device</h5>
            </div>
            <form asp-controller="Device" asp-action="Delete" asp-route-id="@Model.deviceVM.Id" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to delete this device?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="document.getElementById('Device-@Model.deviceVM.Id').style.display='none'" class="btn btn-secondary">Cancel</button>
                    <button type="submit" onclick="document.getElementById('Device-@Model.deviceVM.Id').style.display='none'" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>

    </div>
</div>

<script>
    // Get the modal
    var modal = document.getElementById('Device-@Model.deviceVM.Id');

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>



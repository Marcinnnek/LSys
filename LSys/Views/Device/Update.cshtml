@{
}

<div class="card-body">
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <input hidden asp-for="Id" />
        <div class="mb-2">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" type="text" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="mb-2">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control" type="text" />
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <div class="mb-2">
            <label asp-for="Location">Location</label>
            <input asp-for=Location class="form-control" type="text" />
            <span asp-validation-for="Location" class="text-danger"></span>

        </div>
        <div class="mb-2">
            <label asp-for="Group">Group</label>
            <input asp-for="Group" class="form-control" type="text" />
            <span asp-validation-for="Group" class="text-danger"></span>
        </div>

        <div class="mt-4 mb-0">
            <div type="submit" class="d-grid">
                <button type="submit" class="btn btn-primary btn-block">Update Device</button>
            </div>
        </div>
    </form>
</div>